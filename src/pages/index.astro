<html lang="gl">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta
			name="google-site-verification"
			content="L4SLkfdzHtVhBgKdSpuY53IMtpQCImZmNgYPvAOvGbI"
		/>
		<link rel="icon" type="image/png" href="/favicon.png" sizes="32x32" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<title>somiiux</title>
		<style>
			/* Fade-in dende negro ao entrar */
			body {
				opacity: 0;
				animation: fadeInFromBlack 1.2s ease forwards;
			}

			@keyframes fadeInFromBlack {
				from {
					background-color: #000;
					opacity: 0;
				}
				to {
					background-color: #0a0a0a;
					opacity: 1;
				}
			}

			body.locked {
				pointer-events: none;
			}

			.focus-in-somiiux {
				animation: focus-in-expand 1.2s
					cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
			}

			@keyframes focus-in-expand {
				0% {
					filter: blur(14px);
					opacity: 0;
				}
				100% {
					filter: blur(0);
					opacity: 1;
				}
			}

			.focus-in-website {
				animation: focus-in-expand 1.2s
					cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
			}

			@keyframes focus-in-expand {
				0% {
					filter: blur(14px);
					opacity: 0;
				}
				100% {
					filter: blur(0);
					opacity: 1;
				}
			}
		</style>
	</head>

	<body>
		<main id="mainContent" class="main-content">
			<h1 id="title" class="focus-in-somiiux">SOMIIUX</h1>
			<button id="biografiaBtn" class="biografia-btn"> BIIO </button>
		</main>

		<section id="biografia" class="biografia-section">
			<div class="biografia-container">
				<h2 class="biografia-title">BIIO</h2>
				<div class="biografia-content">
					<p>
						SOMIIUX is an emergiing GROOVY AND HYPNOTIC DJ and
						producer based in galiicia.
						<br /><br />
						Origiinally from O VALADOURO and living in A CORUÃ‘A, he discovered
						his passion for techno through the local scene, attendiing
						clubs and events where he developed a deep connection with
						rhythm and the energy of electroniic music. His style blends
						driiving grooves with hypnotic atmospheres, aiming to immerse
						the listener in a state of motiion and trance.
						<br /><br />
						In 2022, together with his brother LUCASIITO, he purchased
						his first DJ controller and productiion software, marking
						the begiinning of his creative journey. Since then, SOMIIUX
						has been shaping his sound, taking inspiiration from labels
						such as HATE, VAULT SESSIONS or MUTUAL RYTM, as well as artiists
						like FUNK ASSAULT, HYDEN, LOBSTER, among others.
						<br /><br />
						After a year and a half of exploratiion and learning, he
						began performing live â€” some sets alongside his brother and
						others solo â€” experiiences that allowed him to connect directly
						with the audiience and bring his HYPNOTIC ENERGY to the dancefloor.
						He is currently in a continuous process of growth, refiniing
						both his music productiion in ableton and his djing techniique.
						<br /><br />
						His goal is to keep evolving his artistic identity, perfecting
						his craft both in the studiio and on stage to deliver an
						increasiingly soliid, authentiic, and personal expression
						of hiis sound.
					</p>
				</div>

				<button id="volverBtn" class="volver-btn">BACK</button>
			</div>
		</section>

		<script is:inline>
			const body = document.body;
			const biografiaBtn = document.getElementById("biografiaBtn");
			const volverBtn = document.getElementById("volverBtn");
			const mainContent = document.getElementById("mainContent");
			const biografiaSection = document.getElementById("biografia");
			const biografiaContainer = document.querySelector(
				".biografia-container",
			);

			// FunciÃ³n para abrir biografÃ­a
			biografiaBtn.addEventListener("click", () => {
				console.log("BotÃ³n clickeado");

				body.classList.add("locked");

				// ðŸ”½ ESQUINA SUPERIOR IZQUIERDA EXACTA ðŸ”½
				mainContent.style.transform =
					"translate(-100vw, -100vh) scale(0.6)";
				mainContent.style.opacity = "0";
				body.style.opacity = "0";

				setTimeout(() => {
					biografiaSection.classList.add("active");
					body.classList.remove("locked");
				}, 400);
			});

			// FunciÃ³n para cerrar biografÃ­a
			volverBtn.addEventListener("click", () => {
				body.classList.add("locked");

				// DETECTAR SI ES MÃ“VIL O DESKTOP
				const isMobile = window.innerWidth <= 768;
				const exitAnimation = isMobile
					? "containerSlideToBottomMobile"
					: "containerSlideToBottomRight";

				// BIO VUELVE POR DONDE VINO (ESQUINA INFERIOR DERECHA)
				biografiaContainer.style.animation = `${exitAnimation} 0.6s ease forwards`;

				// Ocultar contenido interno de bio durante la salida
				document.querySelector(".biografia-title").style.opacity = "0";
				document.querySelector(".biografia-content").style.opacity =
					"0";
				document.querySelector(".volver-btn").style.opacity = "0";

				setTimeout(() => {
					// QUITAR BIO (FONDO NEGRO SE MANTIENE)
					biografiaSection.classList.remove("active");
					biografiaContainer.style.animation = "";

					// ðŸ”½ SOMIIUX VUELVE DESDE ESQUINA SUPERIOR IZQUIERDA EXACTA ðŸ”½
					mainContent.style.transform =
						"translate(-100vw, -100vh) scale(0.6)";
					mainContent.style.opacity = "0";

					setTimeout(() => {
						mainContent.style.transform =
							"translate(0, 0) scale(1)";
						mainContent.style.opacity = "1";

						// FONDO SE DESVANECE POCO A POCO
						setTimeout(() => {
							body.style.opacity = "1";
							body.classList.remove("locked");
						}, 800);
					}, 50);
				}, 300); // ðŸ”½ TIEMPO COHERENTE CON LA ANIMACIÃ“N DE SALIDA (0.6s) ðŸ”½
			});

			// Cerrar con ESC
			document.addEventListener("keydown", (e) => {
				if (
					e.key === "Escape" &&
					biografiaSection.classList.contains("active")
				) {
					volverBtn.click();
				}
			});
		</script>
	</body>
</html>
